<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="#181820"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#F4F2F2"
            android:textColorHint="#102BDD"
            android:textSize="36sp"
            android:verticalScrollbarPosition="defaultPosition" />


        <TableRow
            android:layout_width="414dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonUm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:onClick="clicaBotao"/>

            <Button
                android:id="@+id/buttonDois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonIgual"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:background="#2CB13F"
                android:text="="
                android:textSize="30sp"
                android:onClick="clicaBotao" />
        </TableRow>

        <TableRow
            android:layout_width="415dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonQuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonSeis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonDividir"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:background="#307C3A"
                android:text="/"
                android:textSize="30sp"
                android:onClick="clicaBotao" />
        </TableRow>

        <TableRow
            android:layout_width="418dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonSete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonOito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonNove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonMultiplica"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:background="#307C3A"
                android:text="X"
                android:textSize="30sp"
                android:onClick="clicaBotao" />
        </TableRow>

        <TableRow
            android:layout_width="417dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonElevado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clicaBotao"
                android:text="^"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:onClick="clicaBotao" />

            <Button
                android:id="@+id/buttonVirgula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clicaBotao"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonMais"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="#307C3A"
                android:text="+"
                android:textSize="30sp"
                android:onClick="clicaBotao" />
        </TableRow>

        <TableRow
            android:layout_width="414dp"
            android:layout_height="618dp">

            <Button
                android:id="@+id/buttonQuadrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clicaBotao"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonLimpa"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:onClick="clicaBotao"
                android:text="Limpa"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonMenos"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:background="#307C3A"
                android:text="-"
                android:textSize="30sp"
                android:onClick="clicaBotao" />
        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>